<div class="login-full">
  <div class="login-left">
    <div class="login-form">
      <div class="title green">
        <h2 >Log in</h2>
        <p class="italic">Growing to your full potential</p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
        <div class="input">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="input">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-purple full" %>
        </div>
        <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
        <% end %>
      <% end %>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <br>
        <span><%= link_to "Forgot your password?", new_password_path(resource_name) %></span>
      <% end %>
    </div>
    <div class="bottom-login">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>

      <% end %>
    </div>
  </div>
  <div class="login-right">
    <div class="content">
      <p>Don't have an account yet ?</p>
      <p class ="btn btn-ghost-white"><%= link_to "Sign up", new_registration_path(resource_name) %></p>
    </div>
  </div>
</div>
