<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table>
  <thead>
    <tr>
      <th>Vitality</th>
      <th>Rank</th>
      <th>Name</th>
      <th>Description</th>
      <th>Theme</th>
      <th>Stars</th>
      <th>Is private</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.vitality %></td>
        <td><%= deck.rank %></td>
        <td><%= deck.name %></td>
        <td><%= deck.description %></td>
        <td><%= deck.theme_id %></td>
        <td><%= deck.stars %></td>
        <td><%= deck.is_private %></td>
        <td><%= deck.parent_id %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

