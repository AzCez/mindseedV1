<div class="container mt-5">


<%# <div class="header-decks"> %>


  <h1 class=green><%= @deck.name.capitalize %></h1>
  <div class="description green"><%= @deck.description %></div>
  <div class="card-container">
  <% @deck.cards.each do |card|%>
  <%= render 'decks/form_update', deck: @deck, card: card %>
  <%end %>
  </div>
  <br>
 <div class="new hidden">
 <hr>
