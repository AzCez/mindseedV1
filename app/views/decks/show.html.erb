      <img class="alt-photo alt-<%= item.id %>" src="https://source.unsplash.com/random" alt="img">
      </div>
    </div>
    </div>

    <div class="input-card-right">
      <%= form.input :definition, as: :text, :error => false, :hint => false, class: "update-definition#{item.id}", input_html: { id: "def-#{item.id}"}%>
       <div class="defs-update-container">
    <div class="definitions-update-<%= item.id %>"> </div>
    <div class="definitions-update-<%= item.id %>"> </div>
    <div class="definitions-update-<%= item.id %>"> </div>
    <div class="definitions-update-<%= item.id %>"> </div>
  </div>
      <%= form.input :context %>
      <%= form.input :memo %>
    </div>

    </div>
    <%= form.button :submit, class: "btn hidden"%>
  <% end %>


