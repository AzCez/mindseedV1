<div class="back">
  <a href="/themes" ><%= icon('fas', 'chevron-left') %></a>
</div>

<div class="center-view">
<div class="view">
<div class="container">

  <div class="card-show">
  <div class="progress">
    <div id=progressTrue class="progress-bar bg-success" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    <div id=progressFalse class="progress-bar bg-danger" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
   </div>


    <% @cards.each do |card| %>
  <div class="consigne hidden">
  Quelle est la composition d'un <%= card.term %> ?
  </div>
    <div class="flip-card hidden">
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <div class="flashcard-card"
            style="background-image : linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url( <%= card.photo.present? ? card.photo : "https://www.npa2009.org/sites/default/files/images/NPA%20point%20d%27interrogation.jpg" %>); background-size: cover; background-position: center;;">
            <a><%= card.term %></a>
          </div>
        </div>
        <div class="flip-card-back"
          style="background-image : linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.9)),  url( <%= card.photo.present? ? card.photo : "https://www.npa2009.org/sites/default/files/images/NPA%20point%20d%27interrogation.jpg"  %>); background-size: cover; background-position: center;">
          <div class="title"
            style="background-image : linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)),  url( <%= card.photo.present? ? card.photo : "https://www.npa2009.org/sites/default/files/images/NPA%20point%20d%27interrogation.jpg"  %>); background-size: cover; background-position: center;">
            <img class="icon-title" src=<%= card.photo.present? ? card.photo : "https://www.npa2009.org/sites/default/files/images/NPA%20point%20d%27interrogation.jpg"  %>>
            <%= card.term %>
          </div>
          <div class="content">
            <%= card.definition%>

          </div>
          <div class="end">

          </div>
        </div>
      </div>
    </div>
    <%end%>
  </div>

<div class="answer-container">

  <div class="text-center">
    <a class="btn center" id=show-card>Voir la reponse</a>
  </div>

   <div class="text-center">
    <a class="btn center" id=btn-next>Suivant</a>
  </div>

  <div class="text-center">
    <a class="btn center" id=yes>Je sais</a>
    <a class="btn center" id=no>Je sais pas</a>
  </div>
</div>


  <div class="result hidden"></div>

