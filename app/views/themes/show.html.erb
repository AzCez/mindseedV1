<div class="back">
  <a href="/themes" ><%= icon('fas', 'chevron-left') %></a>
</div>

<div class="card-theme">
   <h2> <%= @theme.name %> </h2>
   <% @theme.decks.each do |item|  %>

  <a href=<%="/decks/#{item.id}"%>>
    <div class="d-flex bd-highlight bg-white p-3 shadow-sm rounded m-2 border" style="margin-left: <%=20*(item.rank-1)%>px !important;">
      <%= item.name%> (<%= item.cards.count%>)
    </div>
    </a>

   <%end%>


<hr>
  <%= link_to icon('fas', 'edit', '  Edit'),  edit_theme_path(@theme), class:"btn" %>
  <a href="/learn" class="btn"><%= icon('fas', 'seedling', '  Training') %></a>
</div>

<p id="notice"><%= notice %></p>





