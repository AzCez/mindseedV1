<div class="back">
  <a href="/themes" ><%= icon('fas', 'chevron-left') %></a>
</div>

<div class="card-theme">
  <br>
 <h2> <%= @theme.name %> </h2>
 <hr>

 <% @theme.decks.each do |item|  %>
 <a href=<%="/decks/#{item.id}"%>>
  <div class="d-flex bd-highlight bg-white p-3 shadow-sm rounded m-2 border" style="margin-left: <%=20*(item.rank-1)%>px !important;">
    <%= item.name%> (<%= item.cards.count%>)
  </div>
</a>
<%end%>


<hr>
<%= link_to icon('fas', 'edit', '  Edit'), edit_theme_path(@theme), class:"btn" %>
<a href="/learn" class="btn"><%= icon('fas', 'seedling', '  Training') %></a>
</div>

<p id="notice"><%= notice %></p>
<div class="view-data hidden" id="circle-container">
  <svg width="960" height="960"></svg>
</div>
<div class id="tree-container"></div>
<div class="raw-json hidden">



<%= @map %>
</div>

<div class="choice-data">
<div class="btn-group btn-group-toggle" data-toggle="buttons">
  <label  id="option1" class="btn btn-secondary active">
    <input type="radio" name="options" id="option2"autocomplete="off" checked> Circle
  </label>
  <label id="option2" class="btn btn-secondary">
    <input type="radio" name="options" id="option2" autocomplete="off"> Tree
  </label>
</div>

</div>




