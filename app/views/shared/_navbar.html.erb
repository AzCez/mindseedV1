                function signOut() {
                  var auth2 = gapi.auth2.getAuthInstance();
                  auth2.signOut().then(function () {
                    console.log('User signed out.');
                  });
                }
              </script> %>
            </div>
          </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-ghost-purple login"%>
        </li>
        <% end %>
      </ul>
    </div>

</div>
