<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" >

    <div class="brand">

         <%= link_to dashboard_path, class: "navbar-brand" do%>
         <%= render 'shared/logo' %>
         <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

     <div class="search-bar <%= action_name %>">
      <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query], class: "search-field", placeholder: "Search"%>
      <button type="submit" class="search-button"><i class="fa fa-search"> </i></button>
      <% end %>
    </div>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">

              <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/36x36" %>
              <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <p>username</p>
            <div class="dropdown-menu">
              <div class="popover-arrow"></div>

              <%= link_to ' <i class="fas fa-user"></i> Profile'.html_safe, dashboard_path, class: "dropdown-item" %>
              <%= link_to '<i class="fas fa-tree"></i>Dashboard'.html_safe, dashboard_path, class: "dropdown-item" %>
              <%= link_to '<i class="fas fa-power-off"></i>Log out'.html_safe, destroy_user_session_path, method: :delete, class: "dropdown-item" %>

              <%# Bout de code pour se log out sans avoir Ã  se logout de son compte Google %>
